num = 0
answer = ""
def find_prime(number):
    count = 2
    divisible = []
    while count < number/2:
        if number % count == 0:
            divisible.append(count)
            count += 1
        else:
            count += 1
    if divisible == []:
        print (number, "is a prime number")
    else:
        print ((number, "is divisible by"), divisible)
    return number

def enter_number(number):
    print ("Please enter a 5 digit or less number to check if it is prime.")
    number = int(raw_input())
    if number != range(1,99999):    #Check if number is positive and 5 digits or less
        print ("That is an invalid entry.")
        print ("Please enter a 5 digit or less number to check if it is prime.")
        number = int(raw_input())
    
    return number

